{
  "compilerOptions": {
    "target": "ES6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dir",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
